<script>
    // Récupérer les éléments des champs de mot de passe
    const passwordInput = document.getElementById('password');
    const confirmPasswordInput = document.getElementById('confirmPassword');

    // Fonction de vérification de la correspondance des mots de passe
    function validatePassword() {
        if (passwordInput.value !== confirmPasswordInput.value) {
            confirmPasswordInput.setCustomValidity("Les mots de passe ne correspondent pas");
        } else {
            confirmPasswordInput.setCustomValidity('');
        }
    }

    // Ajouter un événement de changement à chaque champ de mot de passe
    passwordInput.addEventListener('change', validatePassword);
    confirmPasswordInput.addEventListener('change', validatePassword);
</script>
